<h1><%= @post.name %></h1>

<% if @post.contents.any? %>
<ul>
  <% @post.contents.each do |content| %>

    <%= content.entry %> |
    <%= link_to "Edit", edit_post_content_path(@post, content) %> |
    <%= link_to "Delete", post_content_path(@post, content),
    :data => {:confirm => "Are you sure?",
      :method => "delete"} %>

    <% end %>
  </ul>
  <% else %>
  <p> There is no content yet!</p>
  <% end %>
  
<hr>
<ul>
  <li><%= link_to "Edit Post", edit_post_path %></li>
  <li><%= link_to "Return to Posts", posts_path %></li>
  <li><%= link_to "Add a new Post", new_post_path %></li>
  <li><%= link_to "Delete Post", post_path(@post),
  :data => {:confirm => "Are you sure?",
    :method => "delete"} %></li>
</ul>
